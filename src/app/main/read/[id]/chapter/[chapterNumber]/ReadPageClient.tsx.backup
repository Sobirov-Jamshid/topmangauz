"use client";

import React, { useState, useEffect, useRef } from 'react';
import Image from 'next/image';
import Link from 'next/link';
import { ChevronLeft, ChevronRight, Settings, Monitor, LayoutGrid, ArrowLeft, Maximize, Minimize, Menu, X } from 'lucide-react';
import { FullScreenLoading } from '@/components/ui/loading-spinner';
import { useMangaChapters, useChapter, usePurchaseChapter } from '@/hooks/api/useManga';
import { useReadingProgress } from '@/hooks/api/useReadingProgress';
import { absoluteMedia } from '@/lib/api/constants';
import PdfViewer from '@/components/common/PdfViewer';
import { AuthGuard } from '@/components/common/AuthGuard';

interface ReadPageClientProps {
  id: string; // manga slug
  chapterNumber: string; // chapter number in URL
}

export default function ReadPageClient({ id, chapterNumber }: ReadPageClientProps) {
  return <ReadPageContent id={id} chapterNumber={chapterNumber} />;
}

function ReadPageContent({ id, chapterNumber }: ReadPageClientProps) {
  const chapterNumberInt = parseInt(chapterNumber, 10);
  const { data: chapters, isLoading: chaptersLoading } = useMangaChapters(id);

  const safeChapters = Array.isArray(chapters) ? chapters : [];
  
  const chapterId = chapterNumberInt;
  const currentChapter = safeChapters.find((ch: any) => ch.id === chapterId);

  const { markChapterAsRead, getProgressInfo, isCompleted } = useReadingProgress({
    mangaId: id,
    totalChapters: safeChapters.length,
    onStatusUpdate: (status) => {
    }
  });
  
  const sortedChapters = Array.isArray(safeChapters) ? [...safeChapters].sort((a, b) => {
    const aNum = parseInt((a?.title || "").replace(/\D/g, "")) || 0;
    const bNum = parseInt((b?.title || "").replace(/\D/g, "")) || 0;
    return aNum - bNum; // Sort from oldest to newest
  }) : [];
  
  const isFirstThreeChapters = sortedChapters.slice(0, 3).some(ch => ch.id === chapterId);
  const isFreeChapter = currentChapter?.access_type === 'free';
  const canReadWithoutLogin = isFirstThreeChapters || isFreeChapter;
  
  const {
    data: chapter,
    isLoading: chapterLoading,
    refetch: refetchChapter,
  } = useChapter(chapterId || 0);

  const purchaseMutation = usePurchaseChapter();

  const [isLoading, setIsLoading] = useState(true);
  const [showControls, setShowControls] = useState(true);
  const [readingMode, setReadingMode] = useState<'scroll' | 'swipe'>('scroll');
  const [isFullscreen, setIsFullscreen] = useState(false);
  const [currentPageIndex, setCurrentPageIndex] = useState(0);
  const [showSettings, setShowSettings] = useState(false);
  const [progress, setProgress] = useState(0);
  const [sliderPage, setSliderPage] = useState(0);
  const [pdfLoading, setPdfLoading] = useState(true);
  const [pdfError, setPdfError] = useState(false);
  const [pdfCurrentPage, setPdfCurrentPage] = useState(0);
  const [pdfTotalPages, setPdfTotalPages] = useState(0);
  const [pdfProgress, setPdfProgress] = useState(0);
  const [showNavigation, setShowNavigation] = useState(false);
  
  const [brightness, setBrightness] = useState(100);
  const [containerWidth, setContainerWidth] = useState(100);
  
  const [isMobile, setIsMobile] = useState(false);
  const [isTablet, setIsTablet] = useState(false);
  
  const [pdfZoom, setPdfZoom] = useState(1.0);
  const [pdfFormat, setPdfFormat] = useState<'auto' | 'landscape' | 'portrait'>('auto');
  const [pdfReadingMode, setPdfReadingMode] = useState<'fit-width' | 'fit-height'>('fit-width');
  
  const [touchStart, setTouchStart] = useState<number | null>(null);
  const [touchEnd, setTouchEnd] = useState<number | null>(null);
  
  useEffect(() => {
    if (isMobile) {
      setPdfZoom(0.8); // Better default zoom for mobile
      setPdfReadingMode('fit-width'); // Always fit-width on mobile for full display
      setContainerWidth(100); // Use full screen width on mobile
      setBrightness(105); // Optimal brightness for mobile
    } else if (isTablet) {
      setPdfZoom(0.9); // Better zoom for tablet
      setContainerWidth(95); // Slight padding on tablet
      setBrightness(102); // Slightly brighter on tablet
    } else {
      setPdfZoom(1.0); // Full zoom on desktop
      setContainerWidth(100); // Full width on desktop
      setBrightness(100); // Standard brightness
    }
  }, [isMobile, isTablet]);
  
  const readerRef = useRef<HTMLDivElement>(null);
  
  const pages = (chapter?.pages && Array.isArray(chapter.pages) ? chapter.pages : []).map((p: any) => {
    if (!p || typeof p !== 'object') return { image: undefined };
    return { ...p, image: p.image ? absoluteMedia(p.image) : undefined };
  });
  const pdfUrl = chapter?.pdf_file ? absoluteMedia(chapter.pdf_file) : undefined;
  
  
  useEffect(() => {
    if (!chaptersLoading && !chapterLoading) {
      setIsLoading(false);
    }
  }, [chaptersLoading, chapterLoading]);

  useEffect(() => {
    const checkDevice = () => {
      const width = window.innerWidth;
      setIsMobile(width < 768);
      setIsTablet(width >= 768 && width < 1024);
    };
    
    checkDevice();
    window.addEventListener('resize', checkDevice);
    return () => window.removeEventListener('resize', checkDevice);
  }, []);

  useEffect(() => {
    if (currentChapter && chapterId && !isLoading) {
      const timer = setTimeout(() => {
        markChapterAsRead(chapterId);
      }, 2000); // 2 seconds delay

      return () => clearTimeout(timer);
    }
  }, [currentChapter, chapterId, isLoading, markChapterAsRead]);

  useEffect(() => {
    if (pdfUrl) {
      setPdfLoading(true);
      setPdfError(false);
      
      const preloadPdf = async () => {
        try {
          const proxyUrl = `/api/proxy-pdf?url=${encodeURIComponent(pdfUrl)}`;
          await fetch(proxyUrl, {
            method: 'HEAD', // Just check if available
            mode: 'cors',
            credentials: 'omit',
          });
        } catch (error) {
        }
      };
      
      preloadPdf();
      
      const timeoutDuration = isMobile ? 300 : 500; // Reduced timeout
      const timer = setTimeout(() => {
        setPdfLoading(false);
      }, timeoutDuration);
      
      return () => clearTimeout(timer);
    } else {
      setPdfLoading(false);
    }
  }, [pdfUrl, isMobile]);

  const nextPage = () => {
    if (currentPageIndex < pages.length - 1) {
      setCurrentPageIndex(prev => prev + 1);
      setSliderPage(currentPageIndex + 1);
    }
  };

  const prevPage = () => {
    if (currentPageIndex > 0) {
      setCurrentPageIndex(prev => prev - 1);
      setSliderPage(currentPageIndex - 1);
    }
  };

  const handleSliderChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const newPage = parseInt(e.target.value) - 1;
    setCurrentPageIndex(newPage);
    setSliderPage(newPage);
  };

  const toggleFullscreen = () => {
    if (!document.fullscreenElement) {
      readerRef.current?.requestFullscreen();
      setIsFullscreen(true);
    } else {
      document.exitFullscreen();
      setIsFullscreen(false);
    }
  };

  const minSwipeDistance = 50;

  const onTouchStart = (e: React.TouchEvent) => {
    setTouchEnd(null);
    setTouchStart(e.targetTouches[0].clientX);
  };

  const onTouchMove = (e: React.TouchEvent) => {
    setTouchEnd(e.targetTouches[0].clientX);
  };

  const onTouchEnd = () => {
    if (!touchStart || !touchEnd) return;
    
    const distance = touchStart - touchEnd;
    const isLeftSwipe = distance > minSwipeDistance;
    const isRightSwipe = distance < -minSwipeDistance;
    
    if (isLeftSwipe && currentPageIndex < pages.length - 1) {
      nextPage();
    }
    if (isRightSwipe && currentPageIndex > 0) {
      prevPage();
    }
  };

  // PDF page change bo'lganda navigation ko'rsatish
  useEffect(() => {
    if (pdfCurrentPage !== undefined && pdfTotalPages !== undefined && pdfTotalPages > 0) {
      if (pdfCurrentPage >= pdfTotalPages - 1) {
        setShowNavigation(true);
      } else {
        setShowNavigation(false);
      }
    }
  }, [pdfCurrentPage, pdfTotalPages]);

  useEffect(() => {
    if (pages.length > 0) {
      if (readingMode === 'scroll') {
        const handleScroll = () => {
          const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
          const scrollHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
          const scrollPercent = (scrollTop / scrollHeight) * 100;
          setProgress(scrollPercent);
        };
        
        window.addEventListener('scroll', handleScroll);
        return () => window.removeEventListener('scroll', handleScroll);
      } else {
        const progressPercent = ((currentPageIndex + 1) / pages.length) * 100;
        setProgress(progressPercent);
      }
    }
  }, [currentPageIndex, pages.length, readingMode]);

  const currentIndex = sortedChapters.findIndex((ch: any) => ch.id === chapterId);
  const nextChapter = currentIndex < sortedChapters.length - 1 ? sortedChapters[currentIndex + 1] : null;
  const prevChapter = currentIndex > 0 ? sortedChapters[currentIndex - 1] : null;
  
  const getChapterId = (ch: any) => ch?.id;
  const handleNextChapter = () => {
    if (nextChapter) {
      // Navigation panelni yashirish va PDFni boshidan boshlash
      setShowNavigation(false);
      setPdfCurrentPage(0);
      window.location.href = `/main/read/${id}/chapter/${nextChapter.id}`;
    }
  };

  const handlePrevChapter = () => {
    if (prevChapter) {
      // Navigation panelni yashirish va PDFni boshidan boshlash
      setShowNavigation(false);
      setPdfCurrentPage(0);
      window.location.href = `/main/read/${id}/chapter/${prevChapter.id}`;
    }
  };

  const handlePdfPageChange = (currentPage: number, totalPages: number) => {
    if (pdfCurrentPage !== currentPage) {
      setPdfCurrentPage(currentPage);
    }
    if (pdfTotalPages !== totalPages) {
      setPdfTotalPages(totalPages);
    }
    const progress = totalPages > 0 ? ((currentPage + 1) / totalPages) * 100 : 0;
    setPdfProgress(progress);
    
    // Faqat oxirgi sahifada navigation ko'rsatish
    if (totalPages > 0 && currentPage >= totalPages - 1) {
      setShowNavigation(true);
    } else {
      setShowNavigation(false);
    }
  };


  useEffect(() => {
    const handleKeyPress = (e: KeyboardEvent) => {
      if (e.target instanceof HTMLInputElement || e.target instanceof HTMLTextAreaElement) {
        return; // Don't handle if typing in input
      }

      switch (e.key) {
        case 'ArrowUp':
          if (prevChapter) {
            e.preventDefault();
            handlePrevChapter();
          }
          break;
        case 'ArrowDown':
          if (nextChapter) {
            e.preventDefault();
            handleNextChapter();
          }
          break;
        case 'Escape':
          setShowControls(!showControls);
          break;
      }
    };

    window.addEventListener('keydown', handleKeyPress);
    return () => window.removeEventListener('keydown', handleKeyPress);
  }, [prevChapter, nextChapter, showControls, handlePrevChapter, handleNextChapter]);

  const handlePurchase = async () => {
    if (chapterId) {
      try {
        await purchaseMutation.mutateAsync(chapterId);
        refetchChapter();
      } catch (error) {
        // Silent fail
      }
    }
  };

  if (isLoading || chaptersLoading || chapterLoading) {
    return <FullScreenLoading />;
  }

  if (!chapter) {
    const errorContent = (
      <div className="min-h-screen bg-black flex items-center justify-center">
        <div className="text-center text-white">
          <h2 className="text-2xl font-bold mb-4">Bob topilmadi</h2>
          <p className="text-gray-400 mb-6">Kechirasiz, bu bob mavjud emas</p>
          <Link 
            href={`/main/manga/${id}`}
            className="px-6 py-2 bg-[#ff9900] text-white rounded-md font-medium hover:bg-[#ff9900]/90 transition-colors"
          >
            Manga sahifasiga qaytish
          </Link>
        </div>
      </div>
    );

    if (canReadWithoutLogin) {
      return errorContent;
    }
    return <AuthGuard>{errorContent}</AuthGuard>;
  }

  if (chapter.access_type === 'paid' && chapter.is_purchased !== 'true' && !canReadWithoutLogin) {
    const purchaseContent = (
      <div className="min-h-screen bg-black flex items-center justify-center">
        <div className="max-w-md mx-auto text-center text-white p-6">
          <div className="bg-[#121212] border border-[#1a1a1a] rounded-lg p-8">
            <h2 className="text-2xl font-bold mb-4">Pullik bob</h2>
            <p className="text-gray-400 mb-6">
              Bu bob pullik. Xarid qilish uchun {chapter.price} to'lov qilishingiz kerak.
            </p>
            
            <div className="space-y-4">
              <button 
                onClick={handlePurchase}
                disabled={purchaseMutation.isPending}
                className="w-full px-6 py-3 bg-[#ff9900] text-white rounded-md font-medium hover:bg-[#ff9900]/90 transition-colors disabled:opacity-50 flex items-center justify-center gap-2"
              >
                {purchaseMutation.isPending ? (
                  'Xarid qilinmoqda...'
                ) : (
                  <>
                    Xarid qilish ({chapter.price}
                    <Image
                      src="/images/icon.png"
                      alt="Coin"
                      width={16}
                      height={16}
                      className="w-4 h-4 object-contain"
                    />
                    )
                  </>
                )}
              </button>
              
              <Link 
                href={`/main/manga/${id}`}
                className="block w-full px-6 py-3 bg-[#1a1a1a] rounded-md font-medium hover:bg-[#252525] transition-colors text-center"
              >
                Manga sahifasiga qaytish
              </Link>
            </div>
            
            <div className="mt-6 text-center text-sm text-[#666]">
              <p>Pullik boblar sizning balansingizdan to'lanadi</p>
              <p className="mt-1">Xarid qilgandan so'ng bobni cheksiz o'qishingiz mumkin</p>
            </div>
          </div>
        </div>
      </div>
    );

    return <AuthGuard>{purchaseContent}</AuthGuard>;
  }

  if (!isLoading && chapter && (chapter.access_type === 'free' || chapter.is_purchased === 'true' || canReadWithoutLogin)) {
    const hasPdfFile = !!pdfUrl;
    const hasPages = pages.length > 0;
    
    const isActualPdf = pdfUrl && pdfUrl.toLowerCase().includes('.pdf');
    const isImageFile = pdfUrl && (pdfUrl.toLowerCase().includes('.jpg') || pdfUrl.toLowerCase().includes('.jpeg') || pdfUrl.toLowerCase().includes('.png'));
    
    
    if (hasPdfFile && !hasPages && isActualPdf) {
      return (
        <div 
          ref={readerRef}
          className={`min-h-screen bg-black relative ${isFullscreen ? 'fullscreen-mode' : ''}`}
          style={{
            width: '100%',
            height: '100vh',
            overflow: 'hidden'
          }}
        >
          {/* Reader Controls - Top Bar */}
          {true && (
            <div className="fixed top-0 left-0 right-0 bg-black/95 backdrop-blur-sm z-50 border-b border-[#333]">
              <div className="container mx-auto px-4 py-3 flex items-center justify-between">
                <div className="flex items-center">
                  <Link 
                    href={`/main/manga/${id}`}
                    className="mr-4 flex items-center text-white hover:text-[#ff9900] transition-colors"
                    onClick={e => e.stopPropagation()}
                  >
                    <ArrowLeft className="w-5 h-5 mr-1" />
                    <span className="hidden sm:inline">Mangaga qaytish</span>
                  </Link>
                  
                  <div className="text-white text-sm md:text-base">
                    <span className="font-medium">{currentChapter?.title || 'Manga'}</span>
                    <span className="mx-2 text-[#a0a0a0]">|</span>
                    <span className="text-[#ff9900]">Bob {currentChapter?.title || chapter?.title || chapterNumberInt}</span>
                  </div>
                </div>
                
                <div className="flex items-center space-x-2">
                  <button 
                    onClick={(e) => {
                      e.stopPropagation();
                      setShowSettings(prev => !prev);
                    }}
                    className="w-10 h-10 flex items-center justify-center rounded-full bg-[#1a1a1a] hover:bg-[#252525] text-white transition-colors"
                  >
                    <Settings className="w-5 h-5" />
                  </button>
                  <button 
                    onClick={(e) => {
                      e.stopPropagation();
                      toggleFullscreen();
                    }}
                    className="w-10 h-10 flex items-center justify-center rounded-full bg-[#1a1a1a] hover:bg-[#252525] text-white transition-colors"
                  >
                    {isFullscreen ? <Minimize className="w-5 h-5" /> : <Maximize className="w-5 h-5" />}
                  </button>
                </div>
              </div>
            </div>
          )}
          
          {/* Settings Panel */}
          {showSettings && (
            <div 
              className="fixed inset-0 bg-black/50 backdrop-blur-sm z-40 flex items-center justify-center p-4"
              onClick={() => setShowSettings(false)}
            >
              <div 
                className="bg-[#1a1a1a] rounded-2xl w-full max-w-sm max-h-[90vh] overflow-y-auto"
                onClick={e => e.stopPropagation()}
              >
                <div className="flex items-center justify-between p-4 border-b border-[#333]">
                  <h3 className="text-white font-semibold text-lg">Sozlamalar</h3>
                  <button 
                    onClick={() => setShowSettings(false)}
                    className="text-[#a0a0a0] hover:text-white p-1"
                  >
                    <X className="w-6 h-6" />
                  </button>
                </div>
                
                <div className="p-4 space-y-6">
                  {/* O'qish rejimi */}
                  <div>
                    <h4 className="text-white mb-3 text-sm font-medium">O'qish rejimi</h4>
                    <div className="grid grid-cols-2 gap-2">
                      <button 
                        onClick={() => {
                          setReadingMode('scroll');
                        }}
                        className={`p-3 rounded-lg text-sm font-medium transition-all duration-200 ${
                          readingMode === 'scroll' 
                            ? 'bg-[#ff9900] text-white shadow-lg' 
                            : 'bg-[#2a2a2a] text-[#a0a0a0] hover:text-white hover:bg-[#333]'
                        }`}
                      >
                        <Monitor className="w-6 h-6 mx-auto mb-2" />
                        Scroll
                      </button>
                      <button 
                        onClick={() => {
                          setReadingMode('swipe');
                        }}
                        className={`p-3 rounded-lg text-sm font-medium transition-all duration-200 ${
                          readingMode === 'swipe' 
                            ? 'bg-[#ff9900] text-white shadow-lg' 
                            : 'bg-[#2a2a2a] text-[#a0a0a0] hover:text-white hover:bg-[#333]'
                        }`}
                      >
                        <LayoutGrid className="w-6 h-6 mx-auto mb-2" />
                        Swipe
                      </button>
                    </div>
                  </div>

                  {/* Zoom */}
                  <div>
                    <div className="flex items-center justify-between mb-3">
                      <h4 className="text-white text-sm font-medium">Zoom</h4>
                      <span className="text-[#ff9900] text-sm font-medium">{Math.round(pdfZoom * 100)}%</span>
                    </div>
                    <div className="relative">
                      <input
                        type="range"
                        min="0.3"
                        max="3.0"
                        step="0.1"
                        value={pdfZoom}
                        onChange={(e) => {
                          setPdfZoom(Number(e.target.value));
                        }}
                        className="w-full h-2 bg-[#333] rounded-lg appearance-none cursor-pointer slider"
                        style={{
                          background: `linear-gradient(to right, #ff9900 0%, #ff9900 ${(pdfZoom - 0.3) / 2.7 * 100}%, #333 ${(pdfZoom - 0.3) / 2.7 * 100}%, #333 100%)`
                        }}
                      />
                    </div>
                  </div>

                  {/* Reading Mode */}
                  <div>
                    <h4 className="text-white mb-3 text-sm font-medium">O'qish rejimi</h4>
                    <div className="grid grid-cols-2 gap-2">
                      <button 
                        onClick={() => {
                          setPdfReadingMode('fit-width');
                        }}
                        className={`p-3 rounded-lg text-sm font-medium transition-all duration-200 ${
                          pdfReadingMode === 'fit-width' 
                            ? 'bg-[#ff9900] text-white shadow-lg' 
                            : 'bg-[#2a2a2a] text-[#a0a0a0] hover:text-white hover:bg-[#333]'
                        }`}
                      >
                        Kenglik bo'yicha
                      </button>
                      <button 
                        onClick={() => {
                          setPdfReadingMode('fit-height');
                        }}
                        className={`p-3 rounded-lg text-sm font-medium transition-all duration-200 ${
                          pdfReadingMode === 'fit-height' 
                            ? 'bg-[#ff9900] text-white shadow-lg' 
                            : 'bg-[#2a2a2a] text-[#a0a0a0] hover:text-white hover:bg-[#333]'
                        }`}
                      >
                        Balandlik bo'yicha
                      </button>
                    </div>
                  </div>
                  {/* Yorqinlik */}
                  <div>
                    <div className="flex items-center justify-between mb-3">
                      <h4 className="text-white text-sm font-medium">Yorqinlik</h4>
                      <span className="text-[#ff9900] text-sm font-medium">{brightness}%</span>
                    </div>
                    <div className="relative">
                      <input
                        type="range"
                        min="10"
                        max="100"
                        value={brightness}
                        onChange={(e) => {
                          const newBrightness = Number(e.target.value);
                          setBrightness(newBrightness);
                        }}
                        className="w-full h-2 bg-[#333] rounded-lg appearance-none cursor-pointer slider"
                        style={{
                          background: `linear-gradient(to right, #ff9900 0%, #ff9900 ${brightness}%, #333 ${brightness}%, #333 100%)`
                        }}
                      />
                    </div>
                  </div>

                  {/* Konteyner kengligi */}
                  <div>
                    <div className="flex items-center justify-between mb-3">
                      <h4 className="text-white text-sm font-medium">Konteyner kengligi</h4>
                      <span className="text-[#ff9900] text-sm font-medium">{containerWidth}%</span>
                    </div>
                    <div className="relative">
                      <input
                        type="range"
                        min="50"
                        max="100"
                        value={containerWidth}
                        onChange={(e) => {
                          const newWidth = Number(e.target.value);
                          setContainerWidth(newWidth);
                        }}
                        className="w-full h-2 bg-[#333] rounded-lg appearance-none cursor-pointer slider"
                        style={{
                          background: `linear-gradient(to right, #ff9900 0%, #ff9900 ${containerWidth}%, #333 ${containerWidth}%, #333 100%)`
                        }}
                      />
                    </div>
                  </div>

                  {/* PDF Pages Info */}
                  {pdfTotalPages > 0 && (
                    <div>
                      <h4 className="text-[#a0a0a0] mb-2 text-sm">PDF Sahifalari</h4>
                      <div className="text-xs text-[#a0a0a0] space-y-2">
                        <div className="flex items-center justify-between">
                          <span>Hozirgi: {pdfCurrentPage + 1} / {pdfTotalPages}</span>
                          <span>{Math.round(pdfProgress)}%</span>
                        </div>
                        
                        {/* Page Navigation */}
                        <div className="flex items-center gap-2">
                          <button 
                            onClick={() => {
                              if (pdfCurrentPage > 0) {
                                const newPage = pdfCurrentPage - 1;
                                setPdfCurrentPage(newPage);
                              }
                            }}
                            disabled={pdfCurrentPage === 0}
                            className="px-2 py-1 bg-[#1a1a1a] text-white rounded text-xs disabled:opacity-50 disabled:cursor-not-allowed hover:bg-[#2a2a2a]"
                          >
                            ←
                          </button>
                          
                          <input
                            type="number"
                            min="1"
                            max={pdfTotalPages}
                            value={pdfCurrentPage + 1}
                            onChange={(e) => {
                              const page = parseInt(e.target.value) - 1;
                              if (page >= 0 && page < pdfTotalPages) {
                                setPdfCurrentPage(page);
                              }
                            }}
                            className="w-12 px-1 py-1 bg-[#1a1a1a] text-white rounded text-xs text-center"
                          />
                          
                          <button 
                            onClick={() => {
                              if (pdfCurrentPage < pdfTotalPages - 1) {
                                const newPage = pdfCurrentPage + 1;
                                setPdfCurrentPage(newPage);
                              }
                            }}
                            disabled={pdfCurrentPage === pdfTotalPages - 1}
                            className="px-2 py-1 bg-[#1a1a1a] text-white rounded text-xs disabled:opacity-50 disabled:cursor-not-allowed hover:bg-[#2a2a2a]"
                          >
                            →
                          </button>
                        </div>
                      </div>
                    </div>
                  )}
                  
                </div>
              </div>
            </div>
          )}
          
          {/* PDF Reader - 100% Full Screen */}
          <div 
            className="bg-black"
            style={{
              filter: `brightness(${brightness}%)`,
              width: '100%',
              height: '100vh',
              overflow: 'hidden',
              position: 'fixed',
              top: 0,
              left: 0,
              right: 0,
              bottom: 0,
              zIndex: 1
            }}
            onClick={(e) => {
              e.stopPropagation();
            }}
          >
            <div 
              className="w-full h-full"
              style={{
                paddingTop: isMobile ? '64px' : '80px',
                height: '100vh',
                overflow: 'auto',
                position: 'relative',
                zIndex: 2
              }}
            >
              <PdfViewer 
                url={pdfUrl || ''}
                watermark="Topmanga"
                mode={readingMode === 'scroll' ? 'vertical' : 'swipe'}
                onPageChange={handlePdfPageChange}
                currentPage={pdfCurrentPage}
                autoDetectFormat={true}
                scale={pdfZoom}
                tallContentMode={pdfReadingMode}
                brightness={brightness}
                containerWidth={100}
                showNavigation={false}
              />
            </div>
          </div>
          
          {/* Menu button (shows when controls are hidden) */}
          {!showControls && (
            <button 
              onClick={(e) => {
                e.stopPropagation();
                setShowControls(true);
              }}
              className="fixed bottom-4 right-4 w-12 h-12 bg-black/70 backdrop-blur-sm rounded-full flex items-center justify-center text-white z-30 opacity-60 hover:opacity-100 transition-opacity"
            >
              <Menu className="w-5 h-5" />
            </button>
          )}
          {/* Page Navigation - Bottom - FAQAT PDF OXIRIDA */}
          {showNavigation && (
            <div className="fixed bottom-0 left-0 right-0 bg-[#1a1a1a]/95 backdrop-blur-sm border-t border-[#333] py-3 px-4 z-50">
            <div className="max-w-4xl mx-auto flex items-center justify-between">
              <div className="flex items-center space-x-2 sm:space-x-4">
                <button 
                  onClick={() => {
                    if (pdfCurrentPage > 0) {
                      setPdfCurrentPage(pdfCurrentPage - 1);
                    }
                  }}
                  disabled={pdfCurrentPage === 0}
                  className="px-3 sm:px-4 py-2 bg-[#2a2a2a] hover:bg-[#333] text-white transition-colors text-xs sm:text-sm rounded flex items-center gap-1 sm:gap-2 disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <ChevronLeft className="w-4 h-4" />
                  <span className="hidden sm:inline">Oldingi</span>
                </button>
              </div>
              
              <div className="flex items-center space-x-2">
                <span className="text-white text-xs sm:text-sm">
                  {pdfCurrentPage + 1} / {pdfTotalPages}
                </span>
              </div>
              
              <div className="flex items-center space-x-2 sm:space-x-4">
                <button 
                  onClick={() => {
                    if (pdfCurrentPage < pdfTotalPages - 1) {
                      setPdfCurrentPage(pdfCurrentPage + 1);
                    } else if (nextChapter) {
                      // Oxirgi sahifada - keyingi chapterga o'tish
                      handleNextChapter();
                    }
                  }}
                  className="px-3 sm:px-4 py-2 bg-[#ff9900] hover:bg-[#ff6600] text-white transition-colors text-xs sm:text-sm rounded flex items-center gap-1 sm:gap-2"
                >
                  <span className="hidden sm:inline">{pdfCurrentPage >= pdfTotalPages - 1 && nextChapter ? 'Keyingi Bob' : 'Keyingi'}</span>
                  <ChevronRight className="w-4 h-4" />
                </button>
              </div>
            </div>
          )}
        </div>
      );
    }
    
    if (hasPdfFile && !hasPages && isImageFile) {
      return (
        <div 
          ref={readerRef}
          className={`min-h-screen bg-black relative ${isFullscreen ? 'fullscreen-mode' : ''}`}
        >
          {/* Reader Controls - Top Bar */}
          {true && (
            <div className="fixed top-0 left-0 right-0 bg-black/95 backdrop-blur-sm z-50 border-b border-[#333]">
              <div className="container mx-auto px-4 py-3 flex items-center justify-between">
                <div className="flex items-center">
                  <Link 
                    href={`/main/manga/${id}`}
                    className="mr-4 flex items-center text-white hover:text-[#ff9900] transition-colors"
                    onClick={e => e.stopPropagation()}
                  >
                    <ArrowLeft className="w-5 h-5 mr-1" />
                    <span className="hidden sm:inline">Mangaga qaytish</span>
                  </Link>
                  
                  <div className="text-white text-sm md:text-base">
                    <span className="font-medium">{currentChapter?.title || 'Manga'}</span>
                    <span className="mx-2 text-[#a0a0a0]">|</span>
                    <span className="text-[#ff9900]">Bob {currentChapter?.title || chapter?.title || chapterNumberInt}</span>
                  </div>
                </div>
                
                <div className="flex items-center space-x-2">
                  <span className="text-[#a0a0a0] text-xs bg-[#2a2a2a] px-2 py-1 rounded">IMAGE</span>
                  <button 
                    onClick={(e) => {
                      e.stopPropagation();
                      setShowSettings(prev => !prev);
                    }}
                    className="w-10 h-10 flex items-center justify-center rounded-full bg-[#1a1a1a] hover:bg-[#252525] text-white transition-colors"
                  >
                    <Settings className="w-5 h-5" />
                  </button>
                  <button 
                    onClick={(e) => {
                      e.stopPropagation();
                      toggleFullscreen();
                    }}
                    className="w-10 h-10 flex items-center justify-center rounded-full bg-[#1a1a1a] hover:bg-[#252525] text-white transition-colors"
                  >
                    {isFullscreen ? <Minimize className="w-5 h-5" /> : <Maximize className="w-5 h-5" />}
                  </button>
                </div>
              </div>
            </div>
          )}
          
          {/* PDF Reader for Mobile - Works for all reading modes */}
          <div 
            className={`${isMobile ? 'pt-16' : 'pt-20'} bg-black min-h-screen ${readingMode} smooth-transition`}
            style={{
              filter: `brightness(${brightness}%)`,
              width: `${isMobile ? 100 : containerWidth}%`,
              margin: '0 auto',
              height: '100vh',
              overflow: 'hidden',
              position: 'relative',
              zIndex: 1
            }}
            onClick={(e) => {
              // Sahifaga bosganda hech narsa bo'lmasin
              e.stopPropagation();
            }}
          >
            <div className={`w-full ${isMobile ? 'h-[calc(100vh-4rem)]' : 'h-[calc(100vh-4rem)]'}`} style={{
              height: '100%',
              overflow: 'auto',
              position: 'relative',
              zIndex: 2
            }}>
              <PdfViewer 
                url={pdfUrl || ''}
                watermark="Topmanga"
                mode={readingMode === 'scroll' ? 'vertical' : 'swipe'}
                onPageChange={handlePdfPageChange}
                currentPage={pdfCurrentPage}
                autoDetectFormat={true}
                scale={pdfZoom}
                tallContentMode={pdfReadingMode}
                brightness={brightness}
                containerWidth={isMobile ? 100 : containerWidth}
                showNavigation={false}
              />
            </div>
          </div>
          
          {/* Menu button (shows when controls are hidden) */}
          {!showControls && (
            <button 
              onClick={(e) => {
                e.stopPropagation();
                setShowControls(true);
              }}
              className="fixed bottom-4 right-4 w-12 h-12 bg-black/70 backdrop-blur-sm rounded-full flex items-center justify-center text-white z-30 opacity-60 hover:opacity-100 transition-opacity"
            >
              <Menu className="w-5 h-5" />
            </button>
          )}
        </div>
      );
    }
    
    return (
      <div 
        ref={readerRef}
        className={`min-h-screen bg-black relative ${isFullscreen ? 'fullscreen-mode' : ''}`}
        onClick={() => !showSettings && setShowControls(prev => !prev)}
      >
        {/* Reader Controls - Top Bar */}
        {showControls && (
          <div className="fixed top-0 left-0 right-0 bg-black/80 backdrop-blur-sm z-30 transition-transform duration-300">
            <div className="container mx-auto px-4 py-3 flex items-center justify-between">
              <div className="flex items-center">
                <Link 
                  href={`/main/manga/${id}`}
                  className="mr-4 flex items-center text-white hover:text-[#ff9900] transition-colors"
                  onClick={e => e.stopPropagation()}
                >
                  <ArrowLeft className="w-5 h-5 mr-1" />
                  <span className="hidden sm:inline">Mangaga qaytish</span>
                </Link>
                
                <div className="text-white text-sm md:text-base">
                  <span className="font-medium">{currentChapter?.title || 'Manga'}</span>
                  <span className="mx-2 text-[#a0a0a0]">|</span>
                  <span className="text-[#ff9900]">Bob {currentChapter?.title || chapter?.title || chapterNumberInt}</span>
                </div>
              </div>
              
              <div className="flex items-center space-x-2">
                {/* Chapter Navigation */}
                <div className="flex items-center space-x-1">
                  {prevChapter && (
                    <button 
                      onClick={handlePrevChapter}
                      className="px-3 py-1 bg-[#2a2a2a] hover:bg-[#333] text-white transition-colors text-sm rounded"
                      title={`Oldingi bob: ${prevChapter.title || `Bob ${prevChapter.id}`}`}
                    >
                      ← Bob
                    </button>
                  )}
                  {nextChapter && (
                    <button 
                      onClick={handleNextChapter}
                      className="px-3 py-1 bg-[#ff9900] hover:bg-[#ff6600] text-white transition-colors text-sm rounded"
                      title={`Keyingi bob: ${nextChapter.title || `Bob ${nextChapter.id}`}`}
                    >
                      Keyingi →
                    </button>
                  )}
                </div>
                
                <button 
                  onClick={(e) => {
                    e.stopPropagation();
                    setShowSettings(prev => !prev);
                  }}
                  className="w-10 h-10 flex items-center justify-center rounded-full bg-[#1a1a1a] hover:bg-[#252525] text-white transition-colors"
                >
                  <Settings className="w-5 h-5" />
                </button>
                <button 
                  onClick={(e) => {
                    e.stopPropagation();
                    toggleFullscreen();
                  }}
                  className="w-10 h-10 flex items-center justify-center rounded-full bg-[#1a1a1a] hover:bg-[#252525] text-white transition-colors"
                >
                  {isFullscreen ? <Minimize className="w-5 h-5" /> : <Maximize className="w-5 h-5" />}
                </button>
              </div>
            </div>
            
            {/* Progress bar */}
            <div className="h-1 bg-[#1a1a1a] relative">
              <div 
                className="h-full bg-[#ff9900]" 
                style={{ width: `${progress}%` }}
              ></div>
            </div>
            
            {/* Page slider (only in swipe mode) */}
            {readingMode === 'swipe' && (
              <div className="px-4 py-2">
                <input
                  type="range"
                  min={1}
                  max={pages.length}
                  value={sliderPage + 1}
                  onChange={handleSliderChange}
                  className="w-full h-1 bg-[#1a1a1a] accent-[#ff9900] cursor-pointer"
                />
                <div className="flex justify-between text-xs text-[#a0a0a0] mt-1">
                  <span>1</span>
                  <span>{pages.length}</span>
                </div>
              </div>
            )}
          </div>
        )}
        
        {/* Settings Panel */}
        {showSettings && (
          <div 
            className="fixed top-16 right-4 bg-[#121212] border border-[#1a1a1a] rounded-md shadow-xl z-40 w-60"
            onClick={e => e.stopPropagation()}
          >
            <div className="flex items-center justify-between p-3 border-b border-[#1a1a1a]">
              <h3 className="text-white font-medium">Sozlamalar</h3>
              <button 
                onClick={() => setShowSettings(false)}
                className="text-[#a0a0a0] hover:text-white"
              >
                <X className="w-5 h-5" />
              </button>
            </div>
            <div className="p-3 space-y-4">
              <div>
                <h4 className="text-[#a0a0a0] mb-2 text-sm">O'qish rejimi</h4>
                <div className="grid grid-cols-2 gap-2">
                  <button 
                    onClick={() => setReadingMode('scroll')}
                    className={`p-2 rounded-md text-sm font-medium transition-colors ${
                      readingMode === 'scroll' 
                        ? 'bg-[#ff9900] text-white' 
                        : 'bg-[#1a1a1a] text-[#a0a0a0] hover:text-white'
                    }`}
                  >
                    <Monitor className="w-4 h-4 mx-auto mb-1" />
                    Scroll
                  </button>
                  <button 
                    onClick={() => setReadingMode('swipe')}
                    className={`p-2 rounded-md text-sm font-medium transition-colors ${
                      readingMode === 'swipe' 
                        ? 'bg-[#ff9900] text-white' 
                        : 'bg-[#1a1a1a] text-[#a0a0a0] hover:text-white'
                    }`}
                  >
                    <LayoutGrid className="w-4 h-4 mx-auto mb-1" />
                    Swipe
                  </button>
                </div>
              </div>
              
              <div>
                <h4 className="text-[#a0a0a0] mb-2 text-sm">Ma'lumot</h4>
                <div className="text-xs text-[#a0a0a0] space-y-1">
                  <p>Jami sahifalar: {pages.length}</p>
                  <p>Hozirgi sahifa: {currentPageIndex + 1}</p>
                  <p>Progress: {Math.round(progress)}%</p>
                </div>
              </div>
            </div>
          </div>
        )}
        
        {/* Main Content */}
        <div className="pt-16">
          {readingMode === 'scroll' ? (
            <div className="max-w-2xl mx-auto space-y-2">
              {pages.map((page: any, index: number) => (
                <div key={index} className="relative">
                  <Image
                    src={page?.image || ''}
                    alt={`Page ${index + 1}`}
                    width={800}
                    height={1200}
                    className="w-full h-auto"
                    priority={index < 3}
                  />
                </div>
              ))}
              {pages.length > 0 && (
                <div className="py-8">
                  <div className="bg-[#121212] border border-[#1a1a1a] rounded-md p-6 my-8 text-center">
                    <h3 className="text-white font-bold text-lg mb-2">Bob tugadi!</h3>
                    {nextChapter ? (
                      <div>
                        <p className="text-[#a0a0a0] mb-4">Keyingi bobga o'tishni xohlaysizmi?</p>
                        <Link 
                          href={getChapterId(nextChapter) !== undefined ? `/main/read/${id}/chapter/${getChapterId(nextChapter)}` : '#'}
                          className="px-6 py-2 bg-[#ff9900] text-white rounded-md font-medium hover:bg-[#ff9900]/90 transition-colors inline-block"
                        >
                          Keyingi bob
                        </Link>
                      </div>
                    ) : (
                      <div>
                        <p className="text-[#a0a0a0] mb-4">Siz eng so'nggi bobga yetib keldingiz.</p>
                        <Link 
                          href={`/main/manga/${id}`}
                          className="px-6 py-2 bg-[#1a1a1a] text-white rounded-md font-medium hover:bg-[#252525] transition-colors inline-block"
                        >
                          Manga sahifasiga qaytish
                        </Link>
                      </div>
                    )}
                  </div>
                </div>
              )}
            </div>
          ) : (
            <div 
              className="h-[calc(100vh-8rem)] flex items-center justify-center relative"
              onTouchStart={onTouchStart}
              onTouchMove={onTouchMove}
              onTouchEnd={onTouchEnd}
            >
              <div className="relative aspect-[3/4] h-full max-h-full mx-auto">
                <Image
                  src={pages[currentPageIndex]?.image || ''}
                  alt={`Page ${currentPageIndex + 1}`}
                  fill
                  priority
                  className="object-contain"
                  sizes="(max-width: 768px) 100vw, 800px"
                />
              </div>
              
              {/* Swipe navigation buttons */}
              <button 
                className={`fixed left-4 top-1/2 transform -translate-y-1/2 w-12 h-16 bg-black/40 rounded-lg flex items-center justify-center text-white hover:bg-black/60 transition-all ${
                  currentPageIndex === 0 ? 'opacity-30 cursor-not-allowed' : 'opacity-70 hover:opacity-100'
                }`}
                onClick={(e) => {
                  e.stopPropagation();
                  prevPage();
                }}
                disabled={currentPageIndex === 0}
              >
                <ChevronLeft className="w-6 h-6" />
              </button>
              
              <button 
                className={`fixed right-4 top-1/2 transform -translate-y-1/2 w-12 h-16 bg-black/40 rounded-lg flex items-center justify-center text-white hover:bg-black/60 transition-all ${
                  currentPageIndex === pages.length - 1 ? 'opacity-30 cursor-not-allowed' : 'opacity-70 hover:opacity-100'
                }`}
                onClick={(e) => {
                  e.stopPropagation();
                  nextPage();
                }}
                disabled={currentPageIndex === pages.length - 1}
              >
                <ChevronRight className="w-6 h-6" />
              </button>

              {/* Page indicator */}
              <div className="fixed bottom-8 left-1/2 transform -translate-x-1/2 bg-black/60 backdrop-blur-sm px-4 py-2 rounded-full text-white text-sm">
                {currentPageIndex + 1} / {pages.length}
              </div>

              {/* Chapter navigation at end */}
              {currentPageIndex === pages.length - 1 && (
                <div className="fixed bottom-24 left-1/2 transform -translate-x-1/2 bg-[#121212]/95 backdrop-blur-sm border border-[#1a1a1a] rounded-lg p-4 text-center">
                  <p className="text-white font-medium mb-3">Bob tugadi!</p>
                  {nextChapter ? (
                    <Link 
                      href={getChapterId(nextChapter) !== undefined ? `/main/read/${id}/chapter/${getChapterId(nextChapter)}` : '#'}
                      className="px-6 py-2 bg-[#ff9900] text-white rounded-md font-medium hover:bg-[#ff9900]/90 transition-colors inline-block"
                    >
                      Keyingi bob →
                    </Link>
                  ) : (
                    <Link 
                      href={`/main/manga/${id}`}
                      className="px-6 py-2 bg-[#1a1a1a] text-white rounded-md font-medium hover:bg-[#252525] transition-colors inline-block"
                    >
                      Manga sahifasiga qaytish
                    </Link>
                  )}
                </div>
              )}
            </div>
          )}
        </div>
        
        
        {/* Menu button (shows when controls are hidden) */}
        {!showControls && (
          <button 
            onClick={(e) => {
              e.stopPropagation();
              setShowControls(true);
            }}
            className="fixed bottom-4 right-4 w-12 h-12 bg-black/70 backdrop-blur-sm rounded-full flex items-center justify-center text-white z-30 opacity-60 hover:opacity-100 transition-opacity"
          >
            <Menu className="w-5 h-5" />
          </button>
        )}
      </div>
    );
  }

  const content = (
    <div className="min-h-screen bg-black flex items-center justify-center">
      <div className="text-center text-white">
        <h2 className="text-2xl font-bold mb-4">Xatolik</h2>
        <p className="text-gray-400 mb-6">Kechirasiz, biror xatolik yuz berdi</p>
        <Link 
          href={`/main/manga/${id}`}
          className="px-6 py-2 bg-[#ff9900] text-white rounded-md font-medium hover:bg-[#ff9900]/90 transition-colors"
        >
          Manga sahifasiga qaytish
        </Link>
      </div>
    </div>
  );

  if (canReadWithoutLogin) {
    return content;
  }

  return <AuthGuard>{content}</AuthGuard>;
} 